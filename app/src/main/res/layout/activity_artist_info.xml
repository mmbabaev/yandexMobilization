<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/artist_big_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/default_artist"
            />

        <TextView
            android:id="@+id/artist_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#A0A0A0"
            android:text="рок, поп" />

        <TextView
            android:id="@+id/artist_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#A0A0A0"
            android:text="5 альбомов • 144 песни" />

        <TextView
            android:id="@+id/biography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/biography"
            style="?android:attr/listSeparatorTextViewStyle"
            />
        
        <TextView
            android:id="@+id/artist_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text Many text "/>
    </LinearLayout>
</ScrollView>